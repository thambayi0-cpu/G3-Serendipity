#include "format.h"
#include "invMenu.h"

using namespace std;

void addBook (bool &keepInvMenuActive, bool &keepAddBookMenuActive, vector<bookType>& books)
{
	const int ENTER_WIDTH = 39;
//	bool notDone = true;
//	bookType emptyBook;

	cout << "\033[H\033[2J"; //Clear screen

	printTopDash();

	cout << "│                           SERENDIPITY BOOKSELLERS                            │" << endl;
	cout << "│                                   ADD BOOK                                   │" << endl;

	printBorder();

	cout << "│                             DATABASE SIZE:  20 CURRENT BOOK COUNT: " << left << setw(3) << bookType::bookCount << right << "       │" << endl;

	printBorder();

	cout << setw(TOTAL_WIDTH) << "│                                                 --PENDING VALUES" << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <1>  Enter Book Title" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << books.at(bookType::bookCount).getTitle() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <2>  Enter ISBN" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << books.at(bookType::bookCount).getIsbn() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <3>  Enter Author" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << books.at(bookType::bookCount).getAuthor() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <4>  Enter Publisher" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << books.at(bookType::bookCount).getPublisher() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <5>  Enter Date Added  (mm/dd/yyyy)" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << books.at(bookType::bookCount).getDate() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <6>  Enter Quantity on Hand" << setw(3) << ">" << setw(TOTAL_WIDTH - ENTER_WIDTH - 3) << fixed << setprecision(0) << books.at(bookType::bookCount).getQty() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <7>  Enter Wholesale Cost" << setw(3) << ">" << "$ " << setw(TOTAL_WIDTH - ENTER_WIDTH - 5) << setprecision(2) << books.at(bookType::bookCount).getWholesale() << "│" << endl;

	cout << setw(ENTER_WIDTH) << "│ <8>  Enter Retail Price" << setw(3) << ">" << "$ " << setw(TOTAL_WIDTH - ENTER_WIDTH - 5) << setprecision(2) << books.at(bookType::bookCount).getRetail() << "│" << endl;

	cout << setw(TOTAL_WIDTH) << "│ <9>  Save Book to Database" << "│" << endl;

	cout << setw(TOTAL_WIDTH) << "│ <0>  Return to Inventory Menu" << "│" << endl;

	printBorder();

	printMidDash();

	cout << setw(TOTAL_WIDTH) << "│ Choice: " <<"│" << endl;

	printBottomDash();

	cout << "Press enter to continue" << "\x1b[20;11H";

	cin.ignore(1000, '\n');
	cin.get();
	cout << "\x1b[23;1H";
	return;
}

//bookType//

unsigned int bookType::bookCount = 0;

//Setters//
void bookType::bookAdd()
{bookCount++;}
void bookType::bookFill(bookType other)
{
	title = other.getTitle();
	isbn = other.getIsbn();
	author = other.getAuthor();
	publisher = other.getPublisher();
	date = other.getDate();
	qty = other.getQty();
	wholesale = other.getWholesale();
	retail = other.getRetail();
}
void bookType::bookEmpty()
{
	title = "EMPTY";
	isbn = "EMPTY";
	author = "EMPTY";
	publisher = "EMPTY";
	date = "EMPTY";
	qty = 0;
	wholesale = 0.0;
	retail = 0.0;
}
